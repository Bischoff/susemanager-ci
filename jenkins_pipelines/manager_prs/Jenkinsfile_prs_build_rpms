#!/usr/bin/env groovy

// Configure the build properties
properties([
    buildDiscarder(logRotator(numToKeepStr: '500', daysToKeepStr: '4')),
    disableConcurrentBuilds(),
])

pipeline {
  environment { 
     repository = "SUSE/spacewalk"
     context = "obs_pkgs_build_susemagr"
     description = "Build from your Prs all pkgs for susemgr-Server"
     git_fs = "${env.WORKSPACE}"
     // the actual test is the git repo
     test = "/home/jenkins/bin/git2obs.sh"

    check = "gitarro.ruby2.1  -r ${repository}" + 
                " -c ${context} -d \"${description}\" " +
                " -t ${test} " +
                " -g ${git_fs} " +
                "--check --changed_since 3600" 

    runtest = "gitarro.ruby2.1  -r ${repository}" + 
                " -c ${context} -d \"${description}\" " +
                " -g ${git_fs} " +
                " -u \"${env.BUILD_URL}\" " +
                " -t ${test} " 

   }
    agent { label 'suse-manager-unit-tests' }
    triggers { cron('H/5 * * * *') }
    stages {
        stage('Check Pull Request') {
            steps { sh "${check} | grep \"TESTREQUIRED=true\" "  }
         }
        stage('Run tests against PR') {
            steps { sh "$runtest}" }
        }
        stage("deploy sumaform infra with builded repository") { echo 'WIP'}
        stage("run cucumber tests on Pull-Request") { echo 'WIP'}
    }
  post { 
        always {
            cleanWs()
        }
    }
}
